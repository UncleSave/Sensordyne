<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16px"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/proximityinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceinfo"
        android:text="@string/proximitytext"
        android:textColor="#000"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/accelerometerinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proximityinfo"
        android:text="@string/accelerometertext"
        android:textColor="#000"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/gyroscopeinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accelerometerinfo"
        android:text="@string/gyroscopetext"
        android:textColor="#000"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/gravityinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gyroscopeinfo"
        android:text="@string/gravitytext"
        android:textColor="#000"
        android:textSize="21dp" />

</android.support.constraint.ConstraintLayout>