<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp">

    <!--<TextView
        android:id="@+id/target_id_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Android ID: "
        android:textSize="15sp"/>-->

    <EditText
        android:id="@+id/target_id_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_android_id"
        android:inputType="text"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/save_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/target_id_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/target_id_input"
        android:clickable="true"
        android:focusable="false"
        android:text="@string/save_and_share"
        android:textSize="15sp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/cancel_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:text="@string/cancel_share"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/save_share_button"
        app:layout_constraintTop_toBottomOf="@id/target_id_input" />

</android.support.constraint.ConstraintLayout>