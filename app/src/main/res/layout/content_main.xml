<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16px"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/accelerometer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/accelerometer_text"
        android:textColor="#000"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/gyroscope_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accelerometer_info"
        android:text="@string/gyroscope_text"
        android:textColor="#000"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/countdown_timer_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gyroscope_info"
        android:text="@string/countdown_timer_text"
        android:textColor="#000"
        android:textSize="21dp" />

    <Button
        android:id="@+id/export_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="104dp"
        android:clickable="false"
        android:onClick="exportToCSV"
        android:text="Export to CSV format"
        app:layout_constraintTop_toBottomOf="@+id/countdown_timer_info" />

    <Button
        android:id="@+id/countdown_timer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="startCountDownTimer"
        android:text="Start timer"
        app:layout_constraintTop_toBottomOf="@+id/export_button" />

</android.support.constraint.ConstraintLayout>